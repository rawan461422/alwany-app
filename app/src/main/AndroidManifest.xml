        <activity
            android:name=".Presentation.Patient.PatientMainActivity"
            android:exported="false" />
        <activity
            android:name=".Presentation.Doctor.DoctorMainActivity"
            android:exported="false" />
        <activity
            android:name=".Presentation.auth.OuterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

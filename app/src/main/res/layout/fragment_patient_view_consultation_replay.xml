<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Presentation.Patient.Consultations.PatientViewConsultationReplay">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/_16sdp"
        android:text="عنوان الاستشارة"
        android:background="@drawable/movie_background"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginHorizontal="8dp"
        android:textSize="@dimen/_16sdp"
        android:text="الوصف الاستشاره الطبية"
        android:textColor="@color/white"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/movie_background"
        android:layout_marginTop="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/replay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginHorizontal="8dp"
        android:textSize="@dimen/_16sdp"
        android:text="الرد علي الاستشارة"
        android:textColor="@color/white"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/movie_background"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>